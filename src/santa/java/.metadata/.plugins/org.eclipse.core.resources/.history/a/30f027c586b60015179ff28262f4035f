
public class Tour {
	private class Node {
		private Point p;
		private Node next;

		public Node(Point p) {
			this.p = p;
			next = null;
		}

		public void setNext(Node next) {
			this.next = next;
		}

		public Node getNext() {
			return next;
		}

		public Point getPoint() {
			return p;
		}
	}

	private Node start;

	public Tour() {
		start = null;
	}

	public int size() {

		if (start == null)
			return 0;

		Node curr = start;
		int size = 0;
		while (curr.getNext() != null) {
			curr = curr.getNext();
			size++;
		}
		return size;
	}
	
	
}
